#!/bin/bash
# .git/hooks/pre-commit
# Make executable: chmod +x .git/hooks/pre-commit

MAX_SIZE=5 # Size in MB

find . -type f -size +${MAX_SIZE}M | while read file; do
    echo "Warning: $file is larger than ${MAX_SIZE}MB"
    git check-ignore -q "$file" || {
        echo "This file is not ignored by .gitignore"
        exit 1
    }
done

